{# templates/user/profile.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body p-4 text-center">
                        <form method="post" action="{{ path('app_profile_upload_image') }}" enctype="multipart/form-data" id="profilePicForm">
                            <div class="position-relative d-inline-block">
                                <picture>
                                    <source srcset="{{ app.user.profilePic | imagine_filter('profile_webp') }}" type="image/webp">
                                    <img src="{{ '/images/defaultProfileImage.png' | imagine_filter('profile') }}"
                                         alt="Profile picture"
                                         class="rounded-circle shadow-sm border"
                                         id="profilePicPreview"
                                         style="width:150px; height:150px; object-fit:cover; cursor:pointer;">
                                </picture>
                                <span class="position-absolute bottom-0 end-0 bg-primary text-white rounded-circle p-2">
                                <i class="bi bi-camera"></i>
                            </span>
                                <input type="file" name="profile_picture" accept="image/*" class="d-none" id="profilePicInput">
                            </div>
                        </form>

                        <h2 class="h4 mt-3 mb-0">{{ app.user.email }}</h2>
                        <p class="text-muted">Member since {{ app.user.createdAt|date('F Y') }}</p>

                        <hr>

                        <div class="row text-start mt-4">
                            <div class="col-sm-6 mb-3">
                                <h6 class="text-uppercase text-muted small mb-1">Username</h6>
                                <p class="mb-0">{{ app.user.username ?? 'Not set' }}</p>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <h6 class="text-uppercase text-muted small mb-1">Email</h6>
                                <p class="mb-0">{{ app.user.email }}</p>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <h6 class="text-uppercase text-muted small mb-1">Favorite Genre</h6>
                                <p class="mb-0">Action / Fantasy</p>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <h6 class="text-uppercase text-muted small mb-1">Anime in Watchlist</h6>
                                <p class="mb-0">27</p>
                            </div>
                        </div>

                        <div class="mt-4">
{#                            <a href="{{ path('app_profile_edit') }}" class="btn btn-outline-primary">#}
                            <a class="btn btn-outline-primary">
                                <i class="bi bi-pencil me-1"></i> Edit Profile
                            </a>
                            <a href="{{ path('app_logout') }}" class="btn btn-outline-danger ms-2">
                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    {# Javascript for clicking and previewing new pic #}
    <script>
        const pic = document.getElementById('profilePicPreview');
        const input = document.getElementById('profilePicInput');
        const form = document.getElementById('profilePicForm');

        // click image â†’ trigger file input
        pic.addEventListener('click', () => input.click());

        // show preview + auto-submit form
        input.addEventListener('change', () => {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => { pic.src = e.target.result; };
                reader.readAsDataURL(input.files[0]);

                // auto-submit
                form.submit();
            }
        });
    </script>
{% endblock %}
