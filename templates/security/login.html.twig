{% extends 'base.html.twig' %}
{% import '_icons.html.twig' as icons %}

{% block title %}Sign in{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-sm" style="width: 100%; max-width: 400px;">
            <div class="card-body p-4">
                <h1 class="h4 mb-4 text-center">Sign in</h1>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ icons.icon('exclamation-triangle-fill', 'me-2') }}
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post" action="{{ path('app_login') }}">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">
                            {{ icons.icon('envelope-fill', 'me-1') }}Email
                        </label>
                        <input type="email" id="inputEmail" name="_username"
                               value="{{ last_username }}" required autofocus
                               autocomplete="email"
                               class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">
                            {{ icons.icon('lock-fill', 'me-1') }}Password
                        </label>
                        <input type="password" id="inputPassword" name="_password"
                               required autocomplete="current-password"
                               class="form-control">
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="_remember_me">
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>

                    <input type="hidden" name="_target_path" value="{{ path('app_anime') }}">

                    <button type="submit" class="btn btn-primary w-100">
                        {{ icons.icon('box-arrow-in-right', 'me-1') }} Sign in
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
