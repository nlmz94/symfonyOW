<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
        <title>{% block title %}OnlyWeebs{% endblock %}</title>
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand bg-body-tertiary border-bottom">
            <div class="container">
                <a class="navbar-brand fw-semibold" href="{{ path('app_anime') }}">OnlyWeebs</a>
                <div class="navbar-nav ms-auto">
                    {% if app.user %}
                        <a class="nav-link" href="{{ path('app_logout') }}">
                            <i class="bi bi-box-arrow-right me-1"></i> Logout
                        </a>
                    {% else %}
                        <a class="nav-link" href="{{ path('app_login') }}">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Login
                        </a>
                        <a class="nav-link" href="{{ path('app_register') }}">
                            <i class="bi bi-person-plus me-1"></i> Register
                        </a>
                    {% endif %}

                    <button id="theme-toggle" class="btn btn-outline-secondary ms-3" type="button">
                        <i id="theme-icon" class="bi bi-moon-fill"></i>
                    </button>
                </div>
            </div>
        </nav>
        <main class="container my-4">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'error' ? 'danger' : label }} mb-3">{{ message }}</div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        </main>
        <footer class="border-top py-4">
            <div class="container text-muted small">&copy; {{ "now"|date("Y") }} OnlyWeebs</div>
        </footer>
        {{ encore_entry_script_tags('app') }}
    </body>
</html>
